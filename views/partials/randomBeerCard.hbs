
<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{ this.image_url}}" class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{ name }}</h5>
        <p class="card-text"><small class="text-muted">{{ tagline }}</small></p>
        <p class="card-text">{{ description }} {{ food_pairing}} {{brewers_tips}} </p>
        <h6 class="card-text-subtitles">Food pairing</h6>
         <p class="card-text">{{ food_pairing}}</p>
         <h6 class="card-text-subtitles">Brewers tips</h6>
          <p class="card-text">{{brewers_tips}} </p>
        
      </div>
    </div>
  </div>
</div>